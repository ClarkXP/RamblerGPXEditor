<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:id="@+id/tableLayout3">

            <TableRow android:id="@+id/managers"

                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/main_pois"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_pois"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button android:id="@+id/main_routes"
                    android:layout_margin="5dp"
                    android:background="@drawable/main_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TextView
                android:id="@+id/open_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="file"
                android:padding="4dp"
                android:textColor="#333333"
                android:textSize="16dp"
                android:gravity="center_horizontal"

                android:layout_gravity="top" />

            <TextView
                android:id="@+id/loaded_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="data"
                android:padding="4dp"
                android:textColor="#999999"
                android:gravity="center_horizontal"

                android:layout_gravity="top" />

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout3"
            android:layout_alignParentStart="true"
            android:id="@+id/tableLayout4">

            <TableRow android:gravity="center_horizontal"
                android:layout_below="@+id/tableLayout3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button style="?android:attr/buttonStyleSmall"
                    android:id="@+id/main_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/main_new"/>

                <Button style="?android:attr/buttonStyleSmall"
                    android:id="@+id/main_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/main_open"/>

                <Button style="?android:attr/buttonStyleSmall"
                    android:id="@+id/main_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/main_save"/>

            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:paddingTop="20dp"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#33ccccee" />

    <!-- Side navigation drawer UI -->



</android.support.v4.widget.DrawerLayout>
